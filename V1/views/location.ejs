<% include partials/header%>


<div class="container">
<header class="jumbotron">

    <div class="container">
    <h1>Welcome to travelon</h1>

    <p> View the locations from all around the globe !</p>
    <p>
    <a href="/locations/new" class="btn btn-primary btn-lg">add a new</a>
    </p>
    </div>
</header>



    <div class="row">
        <h3 class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            The popular travel points
        </h3>

    </div>

        <div class="row text-center" style="display: flex; flex-wrap: wrap">
         <% locations.forEach ( function(locations){%>
        <div class="col-md-3 col-sm-6">

            <div class="thumbnail">

                <img src="<%=locations.img%>">
                <div class="caption"> <h4><%=locations.name%></h4></div>

                <p>

                    <a href="/locations/<%= locations.id%>" class="btn btn-primary"> More info </a>
                </p>
            </div>
        </div>


    <%})%>
        </div>
</div>

<% include partials/footer%>